<!-- nav bar -->
<div class="container">
    <header class="blog-header py-3">
        <div class="row flex-nowrap justify-content-between align-items-center">
            <div class="col-3 pt-1">
                <a class="text-muted" href="/">LAP</a>
            </div>
            <div class="col-4 text-center">
                <a class="blog-header-logo text-dark" href="/">Live Activate Platform</a>
            </div>
            <div class="col-4 d-flex justify-content-end align-items-center">
                <%if (JSON.parse(userinfo).isLogin == true) { %>
                    <a class="btn btn-sm btn-primary" href="/LAP/userinfo">
                    <%= JSON.parse(userinfo).name %></a>&nbsp;&nbsp;
                    <!-- <button class="btn btn-sm btn-outline-secondary" id="signoutBtn">Sign out</button>&nbsp; -->
                    <!-- <a class="btn btn-sm btn-outline-secondary" href="/LAP/signin">Sign out</a>&nbsp; -->
                    <form method="POST" action="/LAP/signout">
                        <input class="btn btn-sm btn-outline-secondary" type="submit" value="Sign Out">
                    </form>
                <% } else { %>
                    <a class="btn btn-sm btn-outline-primary" href="/LAP/signin">Sign in</a>&nbsp;
                    <a class="btn btn-sm btn-outline-secondary" href="/LAP/signup">Sign up</a>&nbsp;
                <% } %>
            </div>
        </div>
    </header>

    <div class="nav-scroller py-1 mb-2">
        <nav class="nav d-flex justify-content-start">
            <%if (JSON.parse(userinfo).isLogin == true) { %>
            <a class="p-2 text-muted" href="/LAP/liveRoom">LiveRoom</a>
            <a class="p-2 text-muted" href="/LAP/ChatRoom">ChatRoom</a>
            <% } else { %>
            <a class="p-2 text-muted" href="/LAP/notLogin">LiveRoom</a>
            <a class="p-2 text-muted" href="/LAP/notLogin">ChatRoom</a>
            <% } %>
        </nav>
    </div>
</div>
